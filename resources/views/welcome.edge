<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Hello Adonis</title>
  <link rel="stylesheet" href="/css/main.css">
  {{--  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/fontawesome.min.css">  --}}
</head>
<body>
  <div class="app-container">
    <section id="left-menu">
      <div class="account-dropdown">
        <div class="logo">
            <i class="fas fa-fist-raised"></i>
        </div>

        <div class="name">
          Defy
        </div>

        <div class="icon">
          <i class="fas fa-chevron-down"></i>
        </div>
      </div>
      <div class="groups">
        <div class="group">
          <div class="title">Title</div>
          <ul>
            <li>Link</li>
            <li>Link</li>
            <li>Link</li>
          </ul>
        </div>
      </div>
    </section>

    <section id="content-container">
      <div class="search-header">
        <div class="search-box">
          <input type="text" name="" value="">
          <div class="icon-section">

            <div class="notify">
              <i class="fas fa-bell"></i>
              <div class="notify-number active">
                9+
              </div>
            </div>

            <div class="comments">
              <i class="fas fa-comment"></i>
              <div class="notify-number active">
                  9+
              </div>
            </div>

            <div class="user">
              <i class="fas fa-user"></i>
              <div class="notify-number active">
                  3
              </div>
            </div>

          </div>
        </div>
      </div>

      <div class="content-area">
        <div class="compose-section">
          <textarea name="name" rows="8" cols="80"></textarea>
          <div class="user-img">

          </div>
          {{--  Buttons  --}}
          <div class="buttons">
            <div class="button photo-btn">
              <i class="fas fa-camera-retro"></i>
            </div>

            <div class="button video-btn">
              <i class="fas fa-video"></i>
            </div>

            <div class="button send-btn">
              <i class="fas fa-paper-plane"></i>
            </div>
          </div>

        </div>
      </div>
    </section>

    <section id="messenger">

    </section>
  </div>
<script src="/js/components/firstComp.js"></script>
<script src="https://kit.fontawesome.com/03a9536c39.js" crossorigin="anonymous"></script>
</body>
</html>
